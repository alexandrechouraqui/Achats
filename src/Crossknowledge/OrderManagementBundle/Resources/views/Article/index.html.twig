{% extends "CrossknowledgeOrderManagementBundle:Article:layoutArticle.html.twig" %}

{% block body %}
    <h2>{{ "article.list" | trans}}</h2>

    <table class="zebra-striped tablesorter" id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ "article.code" | trans}}</th>
                <th>{{ "article.designation" | trans}}</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codeArticle }}</td>
                <td>{{ entity.typeArticle }}</td>
                <td>
                    <a href="{{ path('article_show', { 'id': entity.id }) }}">{{ "commun.see" | trans}}</a>
                </td>
                {% if is_granted('ROLE_ADMIN')%}
                    <td>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}"><img style="border: none;" src="{{ asset('bundles/crossknowledgeordermanagement/images/edit-icon.png') }}"/></a>
                    </td>
                {% else %}
                    <td>
                        <a class="opener1"><img style="border: none;" src="{{ asset('bundles/crossknowledgeordermanagement/images/edit-icon.png') }}"/></a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table>
        <tr>
            {% if is_granted('ROLE_ADMIN')%}
                <td>
                    <a href="{{ path('article_new') }}" class="btn primary">
                        {{ "article.additem" | trans}}
                    </a>
                </td>
            {% else %}
                <td>
                    <a  class="btn primary opener1">
                        {{ "article.additem" | trans}}
                    </a>
                </td>
            {% endif %}
        </tr>
    </table>
{% endblock %}
